# ── Database ──────────────────────────────────────────
DB_HOST=mysql          # keep as "mysql" when using docker-compose
DB_PORT=3306
DB_NAME=pilotarr_db
DB_USER=pilotarr_user
DB_PASSWORD=change_me
MYSQL_ROOT_PASSWORD=change_me_root

# ── Backend API ────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=change_me_api_key
WEBHOOK_SECRET=
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
WEBHOOK_RATE_LIMIT_WINDOW_SECONDS=60
WEBHOOK_RATE_LIMIT_MAX_REQUESTS=120
DEBUG=false

# ── Security ───────────────────────────────────────────
SECRET_KEY=change_me_secret_key   # generate with: openssl rand -hex 32

# ── Docker ─────────────────────────────────────────────
PILOTARR_PORT=80       # host port exposed by nginx
