# ── Database ──────────────────────────────────────────
DB_HOST=mysql          # keep as "mysql" when using docker-compose
DB_PORT=3306
DB_USER=pilotarr_user
DB_PASSWORD=change_me
DB_NAME=pilotarr_db
MYSQL_ROOT_PASSWORD=change_me_root

# ── Backend API ────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=change_me_api_key   # used by the frontend and webhook auth
DEBUG=false

# ── Security ───────────────────────────────────────────
SECRET_KEY=change_me_secret_key   # generate with: openssl rand -hex 32

# ── Docker ─────────────────────────────────────────────
PILOTARR_PORT=80       # host port exposed by nginx (change to e.g. 8080 if 80 is taken)
